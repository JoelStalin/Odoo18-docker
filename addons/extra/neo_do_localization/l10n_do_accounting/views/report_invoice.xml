<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_invoice_document_inherited" inherit_id="account.report_invoice_document" primary="True">

        <!-- Variables Setup -->
        <xpath expr="//t[@t-set='o']" position="after">
            <!-- is_ecf_invoice debe ser un campo en account.move para determinar si es una representación de e-CF -->
            <t t-set="ecf_representation" t-value="o.l10n_do_is_ecf_invoice if hasattr(o, 'l10n_do_is_ecf_invoice') else False"/>
            <!-- l10n_do_electronic_stamp debe ser el contenido para el QR -->
            <t t-set="l10n_do_electronic_stamp" t-value="o.l10n_do_qr_code_str if hasattr(o, 'l10n_do_qr_code_str') else False"/>
            <t t-set="is_l10n_do_invoice" t-value="o.l10n_do_ncf_is_required"/>
        </xpath>

        <!-- Reemplazar el título h2 por el nombre del tipo de documento y el número de NCF -->
        <xpath expr="//div[hasclass('page')]/h2[1]" position="replace">
            <div class="row">
                <div class="col-12 text-center">
                    <h2>
                        <span t-field="o.l10n_latam_document_type_id.report_name"/>
                        <br/>
                        <strong t-if="o.l10n_latam_document_number">
                            <t t-if="ecf_representation">e-NCF:</t><t t-else="">NCF:</t>
                            <span t-field="o.l10n_latam_document_number"/>
                        </strong>
                    </h2>
                </div>
            </div>
        </xpath>

        <!-- Mover la información de la compañía y fiscal antes de la información del cliente -->
        <xpath expr="//div[@id='informations']" position="before">
            <div id="l10n_do_issuer_fiscal_info" class="row mt32 mb32" t-if="is_l10n_do_invoice">
                <div class="col-6">
                    <div><strong t-field="o.company_id.partner_id.name"/></div>
                    <div t-field="o.company_id.partner_id"
                        t-options='{"widget": "contact", "fields": ["address"], "no_marker": True, "address_inline": True}'/>
                    <div>
                        <strong>RNC:</strong>
                        <span t-if="o.company_id.vat" t-field="o.company_id.vat"/>
                    </div>
                    <div>
                        <strong>Fecha Emisión:</strong>
                        <span t-field="o.invoice_date" t-options='{"format": "dd/MM/yyyy"}'/>
                    </div>
                    <div t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted' and not ecf_representation">
                        <strong>Vence:</strong>
                        <span t-field="o.invoice_date_due" t-options='{"format": "dd/MM/yyyy"}'/>
                    </div>
                </div>
                <div class="col-6 text-right"> <!-- Alineado a la derecha para NCF info -->
                    <!-- El nombre del tipo de documento y NCF ya están en el H2 reemplazado arriba -->
                    <div t-if="(o.move_type == 'out_refund' or o.move_type == 'in_refund' or o.debit_origin_id) and o.l10n_do_origin_ncf">
                        <strong>NCF modificado:</strong>
                        <span t-field="o.l10n_do_origin_ncf"/>
                        <div t-if="ecf_representation and hasattr(o, 'l10n_do_ecf_modification_code') and o.l10n_do_ecf_modification_code">
                            <strong>Código Modificación:</strong>
                            <span t-field="o.l10n_do_ecf_modification_code"/>
                        </div>
                    </div>
                    <div t-if="o.l10n_latam_use_documents and o.move_type in ['out_invoice', 'out_refund'] and o.state == 'posted' and o.l10n_latam_document_number and o.l10n_latam_document_type_id and o.l10n_latam_document_type_id.doc_code_prefix and o.l10n_latam_document_type_id.doc_code_prefix[1:] not in ('32', '34', '02')">
                        <strong><t t-if="ecf_representation">Vencimiento e-NCF:</t><t t-else="">Válida hasta:</t></strong>
                         <span t-field="o.l10n_do_ncf_expiration_date" t-options='{"format": "dd/MM/yyyy"}'/>
                    </div>
                </div>
            </div>
        </xpath>

        <!-- Ajustar la sección de información del cliente (partner_id) -->
        <xpath expr="//div[@id='informations']" position="replace">
            <div id="informations" class="row mt32 mb32">
                <div class="col-auto col-7 mw-100 mb-2">
                    <t t-set="partner" t-value="o.partner_id"/>
                    <t t-set="vat_len" t-value="len(partner.vat) if partner.vat else 0"/>
                    <div>
                        <strong>
                            <t t-if="vat_len == 9">Razón Social:</t>
                            <t t-else="">Nombre:</t>
                        </strong>
                        <span class="m-0" t-field="partner.name"/>
                    </div>
                    <div>
                        <strong>
                            <t t-if="vat_len == 9">RNC:</t>
                            <t t-elif="vat_len == 11">Cédula:</t>
                            <t t-else="">ID Cliente:</t>
                        </strong>
                        <span class="m-0" t-esc="partner.vat or ''"/>
                    </div>
                    <div t-field="partner"
                        t-options='{"widget": "contact", "fields": ["address", "phone", "mobile"], "no_marker": True, "address_inline": True, "phone_icons": True}'/>
                </div>
                <div class="col-auto col-5 mw-100 mb-2 text-right">
                     <div t-if="o.invoice_origin">
                        <strong>Origen:</strong>
                        <p class="m-0" t-field="o.invoice_origin"/>
                    </div>
                    <div t-if="o.ref">
                        <strong>Referencia:</strong>
                        <p class="m-0" t-field="o.ref"/>
                    </div>
                </div>
            </div>
        </xpath>

        <!-- Añadir marca 'E' para líneas exentas si es factura DO -->
        <xpath expr="//table[hasclass('o_main_table')]//td[hasclass('o_price_total')]" position="inside">
            <t t-if="is_l10n_do_invoice and line.price_subtotal == line.price_total and not line.tax_ids">
                <span class="text-muted">(E)</span>
            </t>
        </xpath>

        <!-- Modificar la forma en que se muestran los impuestos en las líneas para e-CF -->
        <!-- Asume que l10n_do_itbis_amount es un campo en account.move.line -->
        <xpath expr="//span[@id='line_tax_ids']" position="replace">
            <span t-if="ecf_representation and hasattr(line, 'l10n_do_itbis_amount')" id="line_tax_ids_ecf">
                <span t-esc="o.currency_id.symbol"/> <span t-esc="line.l10n_do_itbis_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
            </span>
            <span t-else="" id="line_tax_ids_std" t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"/>
        </xpath>

        <!-- Añadir monto de descuento por línea para e-CF si display_discount es verdadero -->
        <xpath expr="//th[@name='th_price_unit']/parent::tr/th[hasclass('text-right')][last()]" position="after">
             <th t-if="is_l10n_do_invoice and display_discount and ecf_representation" name="th_discount_amount" class="text-right"><span>Monto Desc.</span></th>
        </xpath>
        <xpath expr="//td[@name='td_price_total']" position="after">
            <td t-if="is_l10n_do_invoice and display_discount and ecf_representation" name="td_discount_amount" class="text-right">
                <span t-esc="line.price_unit * line.quantity * line.discount / 100.0"
                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
            </td>
        </xpath>

        <!-- Reemplazar la sección de totales estándar con la lógica de tax_totals si es posible,
             o con una estructura más clara para la localización DO si tax_totals no es suficiente.
             Para Odoo 18, tax_totals es la forma preferida.
             Si se necesita un desglose muy específico no cubierto por tax_totals, se personalizaría aquí.
             Por ahora, se asume que tax_totals manejará la mayoría de los casos.
             Las secciones comentadas de totales personalizados se eliminarán para evitar confusión.
        -->
        <!-- Eliminando XPaths de totales personalizados antiguos -->
        <!-- <xpath expr="//t[@t-as='amount_by_group']" position="attributes">...</xpath> -->
        <!-- <xpath expr="//t[@t-as='amount_by_group']" position="after">...</xpath> -->
        <!-- <xpath expr="//div[@id='total']/div/table/tr[hasclass('o_total')]" position="before">...</xpath> -->
        <!-- <xpath expr="//span[@t-field='o.amount_total']" position="attributes">...</xpath> -->
        <!-- <xpath expr="//span[@t-field='o.amount_total']" position="after">...</xpath> -->
        <!-- <xpath expr="//t[@t-set='payments_vals']" position="before">...</xpath> -->

        <!-- Pie de página con QR y notas de copia -->
        <xpath expr="//div[@id='total']/div" position="after">
             <div t-if="is_l10n_do_invoice" class="row mt-4">
                <div class="col-6" style="font-size:11px;">
                    <t t-if="l10n_do_electronic_stamp">
                        <div>
                            <img t-att-src="'/report/barcode/?type=QR&amp;width=100&amp;height=100&amp;value=%s' % l10n_do_electronic_stamp" alt="QR Code"/>
                        </div>
                        <div t-if="hasattr(o, 'l10n_do_ecf_security_code') and o.l10n_do_ecf_security_code">
                            <strong>Código de Seguridad:</strong>
                            <span t-esc="o.l10n_do_ecf_security_code"/>
                        </div>
                        <div t-if="hasattr(o, 'l10n_do_ecf_sign_date') and o.l10n_do_ecf_sign_date">
                            <strong>Fecha Firma Digital:</strong>
                            <span t-esc="o.l10n_do_ecf_sign_date" t-options='{"widget": "datetime", "format": "dd-MM-yyyy HH:mm:ss"}'/>
                        </div>
                    </t>
                </div>
                <div class="col-6 text-right text-muted" style="font-size:11px;">
                    <span><strong>Original:</strong> Cliente</span><br/>
                    <span><strong>Copia:</strong> Vendedor</span>
                </div>
            </div>
        </xpath>

    </template>

    <!-- Las siguientes plantillas heredan de account.report_invoice y account.report_invoice_with_payments
         y simplemente llaman a la plantilla personalizada si la condición se cumple.
         Esta parte es correcta y no necesita cambios, asumiendo que _get_name_invoice_report()
         devuelve 'l10n_do_accounting.report_invoice_document_inherited' cuando corresponde.
    -->
    <template id="report_invoice" inherit_id="account.report_invoice">
        <xpath expr='//t[@t-call="account.report_invoice_document"]' position="attributes">
            <attribute name="t-call">#{o._get_name_invoice_report() == 'l10n_do_accounting.report_invoice_document_inherited' and 'l10n_do_accounting.report_invoice_document_inherited' or 'account.report_invoice_document'}</attribute>
        </xpath>
    </template>

    <template id="report_invoice_with_payments" inherit_id="account.report_invoice_with_payments">
        <xpath expr='//t[@t-call="account.report_invoice_document"]' position="attributes">
            <attribute name="t-call">#{o._get_name_invoice_report() == 'l10n_do_accounting.report_invoice_document_inherited' and 'l10n_do_accounting.report_invoice_document_inherited' or 'account.report_invoice_document'}</attribute>
        </xpath>
    </template>

</odoo>
